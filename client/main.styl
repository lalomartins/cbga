@require 'nib'
@require 'axis'
@require 'rupture'
@require 'jeet'

main-bg = #fcfcff
main-color = #070303

normalize-css()

*
    box-sizing border-box

html, body
    padding 0
    margin 0

body
    background-color main-bg
    color main-color
    font-family "Source Sans Pro"

br.spacing
    margin-top 4rem

a:link
    color inherit
    text-decoration none

    &:hover
        color inherit

.external-link:hover
    text-decoration underline

+html5-inputs()
    input()

    &:invalid
        input-error()

.right
    float right
    margin 1rem 0 1rem 1rem

.left
    float left
    margin 1rem 1rem 1rem 0
